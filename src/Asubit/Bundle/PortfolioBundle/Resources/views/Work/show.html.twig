{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Work</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Namecanonical</th>
                <td>{{ entity.nameCanonical }}</td>
            </tr>
            <tr>
                <th>Thumbnail</th>
                <td>{{ entity.thumbnail }}</td>
            </tr>
            <tr>
                <th>Datecreation</th>
                <td>{{ entity.dateCreation|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Photos</th>
                <td>{% for photo in entity.photos %}<img src="{{ asset('../old') }}/{{ photo }}" />{% endfor %}</td>
            </tr>
            <tr>
                <th>Shortdescription</th>
                <td>{{ entity.shortDescription }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('work') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('work_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
